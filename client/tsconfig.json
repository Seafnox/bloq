{
  "extends": "../tsconfig.json",
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "paths": {
      "@block/shared/*": [
        "../shared/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
